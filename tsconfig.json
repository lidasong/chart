{
    "compilerOptions": {
        "module": "ESNext",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "lib": ["es2015", "es2017", "dom"]
    },
    "include": [
        "src/**/*",
        "*.ts",
        "*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}